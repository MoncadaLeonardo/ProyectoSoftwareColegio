@page "/empleados/list"
@using EL
@using BL
@inject EmpleadoService EmpleadoService
@rendermode InteractiveServer   // ¡OBLIGATORIO!

<h3>Lista de Empleados</h3>

@if (empleados == null)
{
    <p>Cargando...</p>
}
else if (!empleados.Any())
{
    <p>No hay empleados registrados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Completo</th>
                <th>Cédula</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in empleados)
            {
                <tr>
                    <td>@emp.IdEmpleado</td>
                    <td>@emp.Nombre @emp.Apellido</td>
                    <td>@emp.CedulaNum</td>
                    <td>
                        <button class="btn btn-danger btn-sm"
                                @onclick="() => EliminarEmpleado(emp.IdEmpleado)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Empleado>? empleados;

    protected override async Task OnInitializedAsync()
    {
        empleados = await EmpleadoService.ObtenerTodos();
    }

    private async Task EliminarEmpleado(int idEmpleado)
    {
        await EmpleadoService.Eliminar(idEmpleado);
        empleados = await EmpleadoService.ObtenerTodos(); // recarga
        StateHasChanged(); // por si acaso
    }
}



