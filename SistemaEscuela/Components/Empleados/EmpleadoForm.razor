@page "/empleados/nuevo"
@page "/empleados/editar/{Id:int}"
@using EL
@using BL
@inject EmpleadoService EmpleadoService
@inject DepartamentoService DepartamentoService
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>@(Id.HasValue ? "Editar" : "Nuevo") Empleado</PageTitle>

<h3 class="mb-4">@(Id.HasValue ? "Editar" : "Crear") Empleado</h3>

<EditForm Model="@empleado" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger mb-3" />

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label class="form-label">Nombre <span class="text-danger">*</span></label>
            <InputText @bind-Value="empleado.Nombre" class="form-control" />
            <ValidationMessage For="@(() => empleado.Nombre)" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Apellido <span class="text-danger">*</span></label>
            <InputText @bind-Value="empleado.Apellido" class="form-control" />
            <ValidationMessage For="@(() => empleado.Apellido)" />
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label class="form-label">Cédula <span class="text-danger">*</span></label>
            <InputText @bind-Value="empleado.CedulaNum" class="form-control" />
            <ValidationMessage For="@(() => empleado.CedulaNum)" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <InputText @bind-Value="empleado.Email" class="form-control" type="email" />
            <ValidationMessage For="@(() => empleado.Email)" />
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label class="form-label">Teléfono</label>
            <InputText @bind-Value="empleado.Telefono" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Departamento</label>
            @if (departamentos == null)
            {
                <div class="form-select text-muted">Cargando departamentos...</div>
            }
            else if (!departamentos.Any())
            {
                <div class="form-select text-warning">No hay departamentos activos</div>
            }
            else
            {
                <InputSelect @bind-Value="empleado.IdDepartamento" class="form-select">
                    <option value="">-- Seleccionar departamento --</option>
                    @foreach (var d in departamentos)
                    {
                        <option value="@d.IdDepartamento">@d.NombreDepartamento</option>
                    }
                </InputSelect>
            }
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success" disabled="@isSaving">
            @(isSaving ? "Guardando..." : "Guardar")
        </button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancelar" disabled="@isSaving">
            Cancelar
        </button>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-@(esError ? "danger" : "success") mt-4 alert-dismissible fade show">
        @mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@code {
    [Parameter] public int? Id { get; set; }

    private Empleado empleado = new();
    private List<Departamento>? departamentos;
    private string? mensaje;
    private bool esError = false;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        // Carga departamentos una sola vez al iniciar el componente
        departamentos = await DepartamentoService.ObtenerActivosAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id.HasValue && Id.Value > 0)
        {
            var existente = await EmpleadoService.ObtenerPorId(Id.Value);
            if (existente != null)
                empleado = existente;
            else
            {
                MostrarMensaje("Empleado no encontrado.", true);
                Nav.NavigateTo("/empleados/list");
            }
        }
        else
        {
            empleado = new Empleado { Activo = true, FechaIngreso = DateTime.Today };
        }
    }

    private async Task Guardar()
    {
        if (isSaving) return;
        isSaving = true;
        mensaje = null;

        try
        {
            bool exito;

            if (Id.HasValue && Id.Value > 0)
            {
                empleado.IdEmpleado = Id.Value;
                exito = await EmpleadoService.Actualizar(empleado);
                MostrarMensaje(exito ? "Empleado actualizado correctamente." : "Error al actualizar.", !exito);
            }
            else
            {
                var nuevo = await EmpleadoService.Agregar(empleado);
                exito = nuevo.IdEmpleado > 0;
                MostrarMensaje(exito ? "Empleado creado exitosamente." : "Error al crear.", !exito);
            }

            if (exito)
            {
                await Task.Delay(800);
                Nav.NavigateTo("/empleados/list");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error inesperado: {ex.Message}", true);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancelar() => Nav.NavigateTo("/empleados/list");

    private void MostrarMensaje(string texto, bool error = false)
    {
        mensaje = texto;
        esError = error;
        StateHasChanged();
    }
}