@page "/admin"
@rendermode InteractiveServer

<PageTitle>Administración - Sistema Colegio</PageTitle>

<div class="container-fluid py-4">
    <h2 class="mb-5 text-primary">
        <i class="bi bi-gear-fill me-3"></i>Panel de Administración
    </h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
        <div class="col">
            <a href="/admin/departamentos" class="text-decoration-none">
                <div class="card h-100 text-center shadow-lg border-0 hover-lift">
                    <div class="card-body p-5">
                        <i class="bi bi-building-fill text-primary" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-4 mb-3 text-dark">Departamentos</h4>
                        <p class="text-muted">Gestión completa de departamentos académicos</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="/admin/horarios" class="text-decoration-none">
                <div class="card h-100 text-center shadow-lg border-0 hover-lift">
                    <div class="card-body p-5">
                        <i class="bi bi-clock-fill text-success" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-4 mb-3 text-dark">Horarios</h4>
                        <p class="text-muted">Gestión de horarios de entrada y salida</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/admin/aulas" class="text-decoration-none">
                <div class="card h-100 text-center shadow-lg border-0 hover-lift">
                    <div class="card-body p-5">
                        <i class="bi bi-easel-fill text-info" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-4 mb-3 text-dark">Aulas</h4>
                        <p class="text-muted">Gestión de aulas y espacios físicos</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/admin/secciones" class="text-decoration-none">
                <div class="card h-100 text-center shadow-lg border-0 hover-lift">
                    <div class="card-body p-5">
                        <i class="bi bi-person-workspace text-purple" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-4 mb-3 text-dark">Secciones</h4>
                        <p class="text-muted">Gestión de secciones por grado</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="/admin/roles" class="text-decoration-none">
                <div class="card h-100 text-center shadow-lg border-0 hover-lift">
                    <div class="card-body p-5">
                        <i class="bi bi-shield-lock-fill text-danger" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-4 mb-3 text-dark">Roles</h4>
                        <p class="text-muted">Gestión de roles del sistema</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: all 0.3s ease;
        border-radius: 15px !important;
    }

        .hover-lift:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2) !important;
        }
</style>